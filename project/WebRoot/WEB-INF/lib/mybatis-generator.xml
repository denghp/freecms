<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<!-- 
生成命令：
java -jar mybatis-generator-core-1.3.1.jar -configfile mybatis-generator.xml  -overwrite
 -->
<generatorConfiguration>
	<!-- 驱动jar包，mssql使用jtds-1.2.jar,mysql使用mysql-connector-java-5.0.8-bin.jar -->
	<classPathEntry location="jtds-1.2.jar" />

	<context id="FreeCMS_Tables" targetRuntime="MyBatis3">
		<!-- 数据库链接配置 -->
		<!-- mssql配置 -->
		<jdbcConnection driverClass="net.sourceforge.jtds.jdbc.Driver"
			connectionURL="jdbc:jtds:sqlserver://localhost:1433/freecms" userId="sa"
			password="sa">
		</jdbcConnection>
		
		<!-- mysql配置 -->
		<!-- 
		<jdbcConnection driverClass="org.gjt.mm.mysql.Driver"
			connectionURL="jdbc:mysql://localhost:3306/freecms?useUnicode=true&characterEncoding=utf-8" userId="root"
			password="root">
		</jdbcConnection>
		 -->

		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>
		
		<!-- model生成文件的存放位置 -->
		<javaModelGenerator targetPackage="cn.freeteam.model"
			targetProject="../../../src">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>
		
		<!-- sqlmap生成文件的存放位置 -->
		<sqlMapGenerator targetPackage="cn.freeteam.model"
			targetProject="../../../src">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>

		<!-- dao生成文件的存放位置 -->
		<javaClientGenerator type="XMLMAPPER"
			targetPackage="cn.freeteam.dao"
			targetProject="../../../src">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>

		<!-- 要生成的表 -->
		<table tableName="freecms_demo"  ></table>
	</context>
</generatorConfiguration>